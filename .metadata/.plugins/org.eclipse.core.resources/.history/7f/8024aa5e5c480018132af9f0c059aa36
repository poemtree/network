package t2;

public class Main {
	static boolean flag;
	
	public static void main(String[] args) {
		R1 r1 = new R1();
		Thread t1 = new Thread(r1);
		int result = 0;
		t1.start();
		System.out.print(flag);
		while(result <= 20) {
			result = r1.getResult();
			System.out.println(result);
		}
	}

}



class R1 implements Runnable {
	private boolean flag;
	private int result;
	
	public R1() {
		this.flag = true;
		this.result = 0;
	}
	
	public void setFlag(boolean flag) {
		this.flag = flag;
	}
	public int getResult() {
		return this.result;
	}
	
	@Override
	public void run() {
		while(flag) {
			result++;
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
};
